{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "~/notes-management/*": ["./domains/notes-management/*"],
      "~/shared/*": ["./shared/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "references": [{ "path": "../api-contracts" }]
}
